<div class="container">
  <div class="text-center mt-5">
    <p class="text-purple fs-3 pt-3 pb-2">ログイン</p>
  </div>
  
<div class="row justify-content-center">
  <div class="col-10 col-md-6">
    <%= form_with model: @user, url: session_path(@user), local: true do |f| %>
    <%= render "shared/validation_error", instance: @user %>
        
        <div class="mb-4">
          <%= f.label :email, "メールアドレス", class: "text-secondary fw-bold mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-sm py-md-3" %>
        </div>
        <div class="mb-4">
          <%= f.label :password, "パスワード", class: "text-secondary fw-bold mb-2 pt-4" %>
          <%= f.password_field :password, autofocus: true, class: "form-control shadow-sm py-md-3" %>
        </div>
        <div class="my-5 text-center">
          <%= f.submit "ログイン", class: "btn btn-primary shadow-sm text-white fw-bold py-3 w-50" %>
        </div>
      <% end %>
    </div>
  </div>
</div>